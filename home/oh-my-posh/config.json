{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "blocks": [
        {
            "alignment": "left",
            "type": "prompt",
            "segments": [
                {
                    "foreground": "#b48ead",
                    "style": "plain",
                    "template": "<#5e81ac>--[</>{{.Context}}{{if .Namespace}} :: {{.Namespace}}{{end}}<#5e81ac>]</>",
                    "type": "kubectl"
                },
                {
                    "foreground": "#88c0d0",
                    "style": "plain",
                    "properties": {
                        "style": "full"
                    },
                    "template": "<#5e81ac>[</> {{ .Path }}<#5e81ac> </>]",
                    "type": "path"
                },
                {
                    "properties": {
                        "fetch_stash_count": true,
                        "fetch_status": true,
                        "fetch_upstream_icon": true
                    },
                    "foreground": "#b48ead",
                    "style": "plain",
                    "template": " --> </>{{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }}<#8fbcbb> \u25cf </>{{ end }}{{ if .Staging.Changed }}<#88c0d0> \u25cf </>{{ end }}<#5e81ac></>",
                    "type": "git"
                },
                {
                    "type": "python",
                    "style": "powerline",
                    "foreground": "#81c4bf",
                    "template": " Python {{ .Full }} "
                },
                {
                    "foreground": "#b48ead",
                    "style": "plain",
                    "template": "<#5e81ac>--[</>{{.Profile}}{{if .Region}}@{{.Region}}{{end}}<#5e81ac>]</>",
                    "type": "aws"
                },
                {
                    "foreground": "#d8dee9",
                    "style": "plain",
                    "template": "<#5e81ac>[</>\uf0e7<#5e81ac>]</>",
                    "type": "root"
                },
                {
                    "foreground": "#d8dee9",
                    "style": "plain",
                    "template": "<#5e81ac>[x</>{{ reason .Code }}<#5e81ac>]</>",
                    "type": "status"
                }
            ]
        },
        {
            "alignment": "left",
            "newline": true,
            "type": "prompt",
            "segments": [
                {
                    "foreground": "#5e81ac",
                    "style": "plain",
                    "template": "\ue602",
                    "type": "text"
                }
            ]
        }
    ],
    "final_space": true,
    "version": 3
}